<!doctype html>
<html lang="kr">

<head>
  <!-- 외부 라이브러리 -->
  <script src="/javascripts/redirect.js"></script>
  <script src="/jquery/jquery.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script type="text/javascript" src="/siofu/client.js"></script>
  <script src="../../public/javascripts/jquery-3.5.1.min.js"></script>

  <!-- 내부 라이브러리 -->
  <script src="/groupwork/groupwork_local.js"></script>
  <script src="/groupwork/groupwork_chat_local.js"></script>

  <!-- ejs 모듈 -->
  <link rel="stylesheet" href="/groupwork/groupwork.css">
  <%- include ('../../public/ejs-module/head.ejs') %>

</head>

<body>
  <!-- 상단 네비게이션 바 -->
  <%- include ('../../public/ejs-module/header.ejs') %>
  <!-- 컨테이너 -->
  <div id="iconField">
    <div id="roomIcon">
      <li class="nav-item dropdown">
        <img class="info" href="#" id="dropdown01" data-bs-toggle="dropdown" aria-expanded="false" src="../images/info.png" alt="Generic placeholder image"></a>
        <img class="roomOut" onclick="roomOut();" src="../images/exit.png" alt="Exit image"></a>
        <img class="myList" onclick="openListModal();" src="../images/list.png" alt="List image"></a>
        <ul class="dropdown-menu" aria-labelledby="dropdown01">
          <li><a class="dropdown-item"><b>ID</b>
              <p id="roomLink"><%=info.roomId%></p>
              <p class="copytag" onclick="copyLink();">copy</p>
            </a></li>
          <li><a class="dropdown-item"><b>PASSWORD</b>
              <p><%=info.roomPSW%></p>
            </a></li>
        </ul>
      </li>
    </div>
  </div>
  <main>

    <div class="chatArea">
      <div class="container-box">
        <div class="top"> <span class="name"></span></div>
        <div id="chat">
          <!-- 채팅 메시지 영역 -->
        </div>
        <div class="write">
          <a href="javascript:;" class="write-link attach" id="upload_btn"></a>
          <input type="text" type="text" id="test" value="" />
          <a href="javascript:;" onclick="send()" class="write-link send"></a>
        </div>
      </div>

      <div class="memo-box">
        <div id="memo">
          <!-- 쪽지 메시지 영역 -->
        </div>
      </div>

      <div id="MYtodoList">
        <!-- MY LIST 영역 -->
      </div>
    </div>

    </div>

    <div class=memberInfo>
      <div id="ALLtodoList">
        <!-- ALL LIST 영역 -->
      </div>
      <div id=memberIndex>
        <% for (var i=0; i<memberList.length; i++){ %>
            <div class=" member <%=memberList[i]%>"><%=memberList[i]%></div>
      <% } %>
      </div>
    </div>
  </main>
  <!-- Writer messageModal-->
  <div class="modal" id="messageModal" data-backdrop="false" style="display: none;">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header"><span class="modal-title" id="message-target"></span></div>
        <div class="modal-body"><textarea id="poster-content" name="poster-content" rows="10" cols="40"></textarea></div>
        <div class="modal-footer">
          <a class="btn btn-primary" id="sendMessage" onclick="sendMemo()">SEND</a>
          <a class="btn btn-primary" id="replyMessage" onclick="replyMemo()">reply</a>
          <button class="btn btn-secondary" onclick="closeModal();">Cancel</button>
        </div>
      </div>
    </div>
  </div>

  <!-- MakeRoom messageModal-->
  <div class="modal" id="ADDListModal" data-backdrop="false" style="display: none;">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header"><span class="modal-title">ADD TO DO LIST</span></div>
        <div class="modal-body"><input type="text" class="AddList" id="poster-content" placeholder="ADD LIST"></div>
        <div class="modal-footer">
          <a class="btn btn-primary" id="ADDList" onclick="addAllList();">ADD</a>
          <button class="btn btn-secondary" onclick="closeListModal();">Cancel</button>
        </div>
      </div>
    </div>
  </div>

</body>

<!-- 히든값 -->
<input type="hidden" id="state" value="<%=info.state%>">
<input type="hidden" id="nickname" value="<%=info.nickname%>">
<input type="hidden" id="roomId" value="<%=info.roomId%>">

<!-- 외부 자바스크립트 -->
<script src="/vendor/bootstrap/js/bootstrap.bundle.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>

<!-- 내부 자바스크립트 -->
<script type="text/javascript">
  main();
</script>

</html>
